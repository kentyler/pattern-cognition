{
  "name": "pattern-cognition",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "migrate": "node migrations/migrate.js",
    "migrate:status": "node -e \"import('./migrations/migrate.js').then(m => m.getCurrentVersion().then(v => console.log('Current version:', v)))\"",
    "migrate:reset": "echo 'WARNING: This will destroy all data!' && read -p 'Continue? (y/N) ' confirm && [[ $confirm == [yY] ]] && psql \"$PATTERN_DB_URL\" -c 'DROP SCHEMA public CASCADE; CREATE SCHEMA public;' && npm run migrate"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "next": "15.3.3",
    "pg": "^8.16.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "eslint": "^9",
    "eslint-config-next": "15.3.3"
  }
}
